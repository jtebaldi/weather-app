<style>
  .address-form {
    max-width: 400px;
  }

  .form-group {
    margin-bottom: 15px;
  }

  .form-control {
    width: 100%;
    padding: 8px;
    border-radius: 4px;
    border: 1px solid #ccc;
  }

  .btn-primary {
    background-color: #007bff;
    color: #fff;
    padding: 10px 15px;
    border: none;
    border-radius: 4px;
    cursor: pointer;
  }

  .btn-primary:hover {
    background-color: #0056b3;
  }
</style>

<h1>Check the Temperature</h1>

<%= form_with url: weather_path, method: :get, local: true, class: "address-form" do |form| %>
  <div class="form-group">
    <%= form.label :street, "Street Address" %>
    <%= text_field_tag :street, nil, placeholder: "123 Main St", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :city, "City" %>
    <%= text_field_tag :city, nil, placeholder: "Charlotte", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :state, "State" %>
    <%= text_field_tag :state, nil, placeholder: "NC", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :zip_code, "Zip Code *" %>
    <%= text_field_tag :zip_code, nil, pattern: "\\d{5}", title: "Please enter a 5-digit zip code", placeholder: "28206", required: true, class: "form-control" %>
  </div>

  <%= form.submit "Get Temperature", class: "btn btn-primary" %>
<% end %>